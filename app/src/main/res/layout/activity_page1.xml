<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Page1">

    <TableLayout
        android:id="@+id/tableLayout2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <TextView
                android:id="@+id/pro"
                android:layout_width="91dp"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:background="#b0b0b0"
                android:padding="13dp"
                android:text="Product" />

            <TextView
                android:id="@+id/pro_id"
                android:layout_width="107dp"
                android:layout_height="wrap_content"
                android:layout_column="2"
                android:background="#b0b0b0"
                android:padding="13dp"
                android:text="ID" />

            <TextView
                android:id="@+id/pro_quan"
                android:layout_width="110dp"
                android:layout_height="match_parent"
                android:layout_column="3"
                android:background="#b0b0b0"
                android:padding="13dp"
                android:text="Quantity" />
        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <Button
                android:id="@+id/P1"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:padding="9dip"
                android:layout_alignParentLeft="true"
                android:text="Product 1" />


            <TextView
                android:id="@+id/pro1_id"
                android:layout_width="49dp"
                android:layout_height="wrap_content"
                android:layout_column="2"
                android:padding="9dip" />

            <TextView
                android:id="@+id/pro1_quan"
                android:layout_width="162dp"
                android:layout_height="match_parent"
                android:layout_column="3"
                android:padding="9dip"/>
        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <Button
                android:id="@+id/P2"
                android:layout_width="91dp"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:padding="9dip"
                android:text="Product 2" />

            <TextView
                android:id="@+id/pro2_id"
                android:layout_width="49dp"
                android:layout_height="wrap_content"
                android:layout_column="2"
                android:padding="9dip"/>

            <TextView
                android:id="@+id/pro2_quan"
                android:layout_width="162dp"
                android:layout_height="match_parent"
                android:layout_column="3"
                android:padding="9dip"/>
        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <Button
                android:id="@+id/P3"
                android:layout_width="91dp"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:padding="9dip"
                android:text="Product 3" />

            <TextView
                android:id="@+id/pro3_id"
                android:layout_width="49dp"
                android:layout_height="wrap_content"
                android:layout_column="2"
                android:padding="9dip"/>

            <TextView
                android:id="@+id/pro3_quan"
                android:layout_width="162dp"
                android:layout_height="match_parent"
                android:layout_column="3"
                android:padding="9dip"/>
        </TableRow>
    </TableLayout>

</RelativeLayout>